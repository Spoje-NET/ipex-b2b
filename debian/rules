#!/usr/bin/make -f

%:
	dh $@

override_dh_prep:
	phpdoc -d src --defaultpackagename=MainPackage
	rm -rf docs
	mkdir -p docs        
	mv .phpdoc/build/* docs
	dh_prep

override_dh_auto_test:
	echo tests temporarly skipped for now in rules file

override_dh_install:
	dh_install
	jq '.version = "'`dpkg-parsechangelog | sed -n 's/^Version: //p'| sed 's/~.*//'`'"'  debian/composer.json |sponge debian/composer.json

override_dh_prep:
	phpdoc -d src
	mkdir -p docs ; mv .phpdoc/build/* docs
	dh_prep
